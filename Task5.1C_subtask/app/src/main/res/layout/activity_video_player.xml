<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/youtubeUrlEditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:hint="Youtube URL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_style"
        app:layout_constraintVertical_bias="0.4"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/youtubeUrlEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/addToPlaylistButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ADD TO PLAYLIST"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/viewPlaylistButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="MY PLAYLIST"
        app:layout_constraintTop_toBottomOf="@+id/addToPlaylistButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>